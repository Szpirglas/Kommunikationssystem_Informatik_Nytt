@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Whiteboard - Informatics</h1>
    <div class="lead">
        <img src="https://upload.wikimedia.org/wikipedia/commons/1/19/%C3%96rebro_universitet_2013.jpg" height="600px" />
    </div>
</div>
@if (User.Identity.IsAuthenticated)
{
<div class="row">
    <div class="col-md-4">
        <h2>@Html.ActionLink("Research", "Feed", "Feed", new RouteValueDictionary(new { sectionID = 2 }), null)</h2>
        <p>
            Read about news within research at Örebro University.
        </p>
    </div>
    <div class="col-md-4">
        <h2>@Html.ActionLink("Education", "Feed", "Feed", new RouteValueDictionary(new { sectionID = 1 }), null)</h2>
        <p>Read and post about news and other information regarding education.</p>

    </div>
    <div class="col-md-4">
        <h2>@Html.ActionLink("Social", "Feed", "Feed", new RouteValueDictionary(new { sectionID = 3 }), null)</h2>
        <p>Share something Off-Topic! Post about your vacation, plan an After-Work or anything else you'd like.</p>
    </div>
</div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <h2>@Html.ActionLink("Research", "LoginUser", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</h2>
            <p>
                Read about news within research at Örebro University.
            </p>
        </div>
        <div class="col-md-4">
            <h2>@Html.ActionLink("Education", "LoginUser", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</h2>
            <p>Read and post about news and other information regarding education.</p>

        </div>
        <div class="col-md-4">
            <h2>@Html.ActionLink("Social", "LoginUser", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</h2>
            <p>Share something Off-Topic! Post about your vacation, plan an After-Work or anything else you'd like.</p>
        </div>
    </div>

}



